{{!-- This is the form to edit the posts when the edit post button is clicked --}}
<section>
  <div class="flex justify-center">
      <div class="w-full max-w-xs">
          <p class="bg-green-600 p-4 text-white font-bold text-xl text-center">EDIT POST</p>
          <form class="edit-post-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
              <div class="mb-4">
                  <label class="block text-gray-700 text-sm font-bold mb-2" for="book-name">Book Name</label>
                  <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="book-name" name="book-name" value="{{post.book_name}}" />
              </div>
              <div class="mb-4">
                  <label class="block text-gray-700 text-sm font-bold mb-2" for="book-author">Book Author</label>
                  <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="book-author" name="book-author" value="{{post.book_author}}" />
              </div>
              <div class="mb-4">
                  <label class="block text-gray-700 text-sm font-bold mb-2" for="price">Price</label>
                  <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" type="text" id="price" name="price" value="{{post.price}}" />
              </div>
              <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Description</label>
                <textarea class="w-64 h-32 border-2" id="content" name="content">{{post.content}}</textarea>
              </div>
              <div class="flex flex-col justify-center">
                <button type="submit" class="btn bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline mb-2" id="edit-post-btn">Save Post</button>
                <button type="button" class="delete-post-btn bg-red-600 hover:bg-green-700 text-white font-bold py-2 px-10 rounded focus:outline-none focus:shadow-outline">Delete Post</button>
              </div>
          </form>
      </div>
  </div>
</section>

<script src="/javascript/edit-post.js"></script>

